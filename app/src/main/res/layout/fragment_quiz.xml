                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/small_flame" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-20dp"
                    android:src="@drawable/large_flame" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/progressOfTheOpponent"
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_height"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/opponentAvatar"
            android:layout_width="@dimen/small_user_avatar_dimen"
            android:layout_height="@dimen/small_user_avatar_dimen"
            android:padding="4dp"
            android:src="@drawable/avatar01"
            app:layout_constraintBottom_toBottomOf="@+id/progressOfTheOpponent"
            app:layout_constraintEnd_toEndOf="@+id/progressOfTheOpponent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/progressOfTheOpponent"
            app:layout_constraintTop_toTopOf="@+id/progressOfTheOpponent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRoundedWhiteStoke"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-112dp"
        tools:layout_editor_absoluteY="148dp" />

    <LinearLayout
        android:id="@+id/watingForOpponent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Text.Middle.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_opponent"
            android:textColor="@color/white" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/normal_margin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>