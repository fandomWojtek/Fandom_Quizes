<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opponentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/normal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/progress_height"
            android:background="@drawable/background_of_progress"
            app:layout_constraintBottom_toBottomOf="@+id/progressOfTheOpponent"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progressOfTheOpponent" />

        <LinearLayout
            android:id="@+id/progressOfTheOpponent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/opponentProgressHeight"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            android:weightSum="10"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/opponentAvatar"
            android:layout_width="@dimen/small_user_avatar_dimen"
            android:layout_height="@dimen/small_user_avatar_dimen"
            android:src="@drawable/avatar01"
            app:layout_constraintBottom_toBottomOf="@+id/progressOfTheOpponent"
            app:layout_constraintEnd_toEndOf="@+id/progressOfTheOpponent"
            app:layout_constraintStart_toEndOf="@+id/progressOfTheOpponent"
            app:layout_constraintTop_toTopOf="@+id/progressOfTheOpponent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>